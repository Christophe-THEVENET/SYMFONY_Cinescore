<article class='col-md-4 my-2 card-item'>
	<div class="card w-100">
		{% if movie.imageName %}
			<img src="{{vich_uploader_asset(movie, 'imageFile')}}" class="card-img-top img-card" alt="affiche du film.">
		{% else %}
			<img src="{{asset('build/images/default_movie.jpg') }}" class="card-img-top img-card" alt="affiche du film.">
		{% endif %}
		<div class="card-body">
			<h5 class="card-title">{{movie.name | slice(0, 20) | capitalize}}</h5>
			<p class="card-text">{{movie.synopsys | slice(0, 35)  | raw}}</p>

			<a href="{{ path('app_movie_show', {'id': movie.id}) }}" class="btn btn-primary">Voir plus</a>
		</div>
	</div>
</article>
